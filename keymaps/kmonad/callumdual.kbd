  ;; ** For Linux **
  input  (device-file "/dev/input/by-path/platform-i8042-serio-0-event-kbd")
  ;; input  (device-file "/dev/input/by-id/usb-Microsoft_MicrosoftÂ®_2.4GHz_Transceiver_v9.0-event-kbd")
