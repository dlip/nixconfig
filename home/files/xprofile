startup() {
  tmux new-session -d -s work
  tmux send-keys -t work 'p nixconfig' C-m
  kitty tmux a -t work&
  google-chrome-stable&
  obsidian&
  slack&
  teams&
  warpd&
}

# https://github.com/NixOS/nixpkgs/issues/119513
if [ -z $_XPROFILE_SOURCED ]; then
  export _XPROFILE_SOURCED=1
  sleep 1 && startup&
fi
