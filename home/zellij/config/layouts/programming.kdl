layout {
	default_tab_template {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        children
    }
	tab name="editor" focus=true {
		pane command="hx"
    }
	tab name="shell" {
		pane command="zsh"
    }
	tab name="git" {
		pane command="lazygit"
	}
	tab name="files" {
		pane command="nnn"
	}
}