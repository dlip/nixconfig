(defcfg
  ;; ** For Linux **
  ;; input  (device-file "/dev/input/by-path/platform-i8042-serio-0-event-kbd")
  input  (device-file "/dev/input/by-id/usb-foostan_Corne-event-kbd")
  ;; input  (device-file "/dev/input/by-id/usb-Matias_Ergo_Pro_Keyboard-event-kbd")
  output (uinput-sink "KMonad output")

  ;; ** For Windows **
  ;; input  (low-level-hook)
  ;; output (send-event-sink)

  ;; ** For MacOS **
  ;; input  (iokit-name "my-keyboard-product-string")
  ;; output (kext)

  fallthrough true
)

(defalias
  nav_e (tap-hold-next-release 200 e (layer-toggle nav))
  num_s (tap-hold-next-release 200 s (layer-toggle num))
  sym_t (tap-hold-next-release 200 t (layer-toggle sym))
  fn_r (tap-hold-next-release 200 r (layer-toggle fn))
  sft_a (tap-hold-next-release 200 a lsft)
  sft_o (tap-hold-next-release 200 o lsft)
  
  bk Back
  fw Forward
)

(defsrc
  tab     q    w    e    r    t    y    u    i    o    p    [
  caps    a    s    d    f    g    h    j    k    l    ;    '
  lsft      z    x    c    v    b    n    m    ,    .    /    rsft
  lctl    lmet lalt      bspc     spc            ralt rctl cmp  rctl
)

(deflayer colemak-dh
  tab      q    w    f    p    b    j    l    u    y    ;    esc
  bspc     @sft_a    @fn_r    @num_s    @sym_t    g    m    n    @nav_e    i    @sft_o    ret
  grv       z    x    c    d    v    k    h    ,    .    '    /
  lctl     lalt lctl      lsft    spc            lmet ralt _    _
)

(deflayer nav
  _        esc    home    up    end    pgup    _    _    _    _    _    _
  _        del    left    down    right    pgdn    _    _    _    _    _    _
  _          _    _    prnt    caps    _    _    _    _    _    _    _ 
  _        _    _           _   _              _    _    _    _
)

(deflayer num
  _        _    _    _    _    _    =    7    8    9    \    _
  _        _    _    _    _    _    -    4    5    6    0    _
  _          _    _    _    _    _    [    1    2    3    ]    _ 
  _        _    _           _   _              _    _    _    _
)

(deflayer sym
  _        _    _    _    _    _    +    &    *    \(    |    _
  _        _    _    _    _    _    \_    $    %    ^    \)    _
  _          _    _    _    _    _    {    !    @    #    }    _ 
  _        _    _           _   _              _    _    _    _
)

(deflayer fn
  _        _    _    _    _    _    f13    f7    f8    f9    f10    _
  _        _    _    _    _    _    f14    f4    f5    f6    f11    _
  _          _    _    _    _    _    f15    f1    f2    f3    f12    _ 
  _        _    _           _   _              _    _    _    _
)
