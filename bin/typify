#!/usr/bin/env python
# Make a text file easier to practice typing by putting each paragraph on a single line
import sys
import os

if len(sys.argv) < 2:
    print("Error: Usage typeify <file>")
    sys.exit(1)

filename = sys.argv[1]
if not os.path.isfile(filename):
    print(f"Error: file {file} does not exist")
    sys.exit(1)

output = ""
with open(filename) as file:
    for line in file:
        if len(line.strip()) == 0:
            if output != "":
                print(output.strip() + "\n")
                output = ""
        else:
            output += line.strip().replace("\n", "") + " "
