#!/usr/bin/env bash
set -euo pipefail

playerctl pause || true
i3lock-color -i ~/sync/wallpapers/i3lock.png --ring-color=5e81ac --inside-color=2e3440 --ringver-color=88c0d0 --insidever-color=5e81ac --ringwrong-color=b74242 --insidewrong-color=c62c2c --line-color=20242c --keyhl-color=88c0d0 --wrong-text="nope" --ring-width=20
xset dpms force off
xrandr --output eDP-1-1 --off
